DECLARE
  l_roles    owa.vc_arr;
  l_patterns owa.vc_arr;
BEGIN
  --
  ords.create_role(p_role_name => 'ecsu.api.access.role');
  --
  ords_metadata.oauth.create_client(p_name            => 'ECSU Spring Boot Application',
                                    p_grant_type      => 'client_credentials',
                                    p_owner           => 'APPS',
                                    p_description     => 'Client credentials for the ECSU backend',
                                    p_origins_allowed => '',
                                    p_redirect_uri    => NULL,
                                    p_support_email   => 'admin@ecsu.local',
                                    p_support_uri     => 'http://ecsu.local',
                                    p_privilege_names => '');
  --
  ords_metadata.oauth.grant_client_role(p_client_name => 'ECSU Spring Boot Application',
                                        p_role_name   => 'ecsu.api.access.role');
  --
  l_roles(1) := 'ecsu.api.access.role';
  l_patterns(1) := '/ECSU/getComponent';
  l_patterns(2) := '/ECSU/getComponentSuggestion';
  --
  ords.define_privilege(p_privilege_name => 'ecsu.search.privilege',
                        p_roles          => l_roles,
                        p_patterns       => l_patterns,
                        p_label          => 'ECSU Search API Privilege',
                        p_description    => 'Grants access to the ECSU Component Search endpoint');
  --
  COMMIT;
  --
END;
